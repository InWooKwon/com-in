<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mycompany"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/meritz" />

    <LinearLayout
        android:id="@+id/mynameLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/mycompany"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myinsType"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:fontFamily="@font/font2"
            android:text="보험타입"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/myinsName"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:text="보험이름"
            android:textSize="14sp" />

    </LinearLayout>



    <TextView
        android:id="@+id/myprice"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/mynameLayout"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font2"
        android:gravity="center"
        android:text="보험료" />

    <TextView
        android:id="@+id/mydescript"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/myprice"
        android:layout_toRightOf="@id/mynameLayout"
        android:fontFamily="@font/font2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="보험 설명" />

</RelativeLayout>